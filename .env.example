# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_PROVIDER=openai  # openai, anthropic
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.1

# Vector Store
VECTOR_STORE=faiss  # faiss or chroma
EMBEDDING_MODEL=text-embedding-3-small

# Oracle EBS (Optional)
ORACLE_CONNECTION_STRING=user/password@host:port/service
ORACLE_MODULES=GL,AP,AR

# Application Under Test
APP_URL=https://your-app.example.com
APP_AUTH_TYPE=basic  # basic, oauth2, bearer
APP_USERNAME=test_user
APP_PASSWORD=test_password

# CI/CD Integration (Optional)
AZURE_DEVOPS_ORG=your_org
AZURE_DEVOPS_PROJECT=your_project
AZURE_DEVOPS_PAT=your_personal_access_token

GITHUB_TOKEN=your_github_token
GITHUB_REPO=owner/repo

# HITL Configuration
HITL_MODE=APPROVE_PLAN  # FULL_AUTO, APPROVE_PLAN, APPROVE_TESTS, APPROVE_ALL, INTERACTIVE
APPROVAL_TIMEOUT=3600  # seconds
ENABLE_WEB_INTERFACE=true

# Web UI Configuration
WEB_UI_HOST=0.0.0.0
WEB_UI_PORT=5000
FLASK_DEBUG=false
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Test Execution
TEST_FRAMEWORK=playwright  # selenium, playwright, pytest
PARALLEL_EXECUTION=true
MAX_WORKERS=4
HEADLESS_MODE=true
SCREENSHOT_ON_FAILURE=true

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/regression_suite.log
